        android:visibility="visible"
         />

    <TextView
        android:id="@+id/tv_pisotion_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="1" />

</LinearLayout>